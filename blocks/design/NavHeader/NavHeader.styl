@require 'NavHeader_Sizes.styl'

.NavHeader

    // DEBUG
    // height: 100px
    // border: 1px solid red

    clearfix()

    z-index: $NavHeader.zIndex

    background-color: $NavHeader.Background.color
    if $NavHeader.Background.image
        background-image: $NavHeader.Background.image
        // background-repeat: no-repeat
        // background-size: cover
        background-position: top center
        background-size: 100% 100%

    default-font-style()
    color: $NavHeader.defaultColor

    padding: $NavHeader.padding // ( $NavHeader.Padding - 5px ) $NavHeader.Padding

    border-top: 5px solid alpha(#000,.6)
    border-bottom: 2px solid alpha(#000,.2)
    box-shadow: 4px 0 0px 4px alpha(#000,.1)

