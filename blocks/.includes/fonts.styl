$font-default = $font-family-base // "Helvetica Neue", Helvetica, Arial, sans-serif;

$font-size = 13px // $font-size-base // 15px
$font-size-default = $font-size
$font-size-normal = $font-size
$font-size-s = $font-size - 2px
$font-size-xs = $font-size-s - 2px
$font-size-l = $font-size + 4px
$font-size-xl = $font-size-l + 4px
$font-size-xxl = $font-size-xl + 4px

default-font-style()
    font-family: Arial, Helvetica, sans-serif
    font-size: $font-size-normal
$default-font-style
    default-font-style()

