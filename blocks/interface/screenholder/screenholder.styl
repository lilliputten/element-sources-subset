.screenholder
    z-index: 40
    top: 0
    width: 100%
    height: 100%
    position: absolute
    text-align: center
    overflow: hidden

    background-color: $layout-background-color

    &_theme_light
    &_theme_white
        background-color: #FFF
    &_theme_dark
        background-color: $neutral-color
    &_theme_darkalpha
        background-color: alpha(darken($neutral-color,50),.5)

    &__waiting
    &__error
        display: block
        position: absolute
        top: 50%
        width: 100%;
        transform: translateY(-50%)
        transition: opacity 1s
    &__waiting
        opacity: 1
        // pointer-events: auto
    &__error
        opacity: 0
        // z-index: -10
        // pointer-events: none
        .icon
            font-size: 70px
            ^[0..0]_size_s ^[2..-1]
                font-size: 40px
            color: lighten($neutral-color,20)
            // pointer-events: none
            &:after
                display: none

    &__info
        margin: 10px 0
    &__info_title
    &__error_text
        color: lighten($neutral-color,10)
    &__info_title
    &__error_text
        &:not(:empty)
            margin: 20px 0
        font-size: $font-size-xl
        pre
        small
            font-size: $font-size-normal
        pre
            color: lighten($neutral-color,10)
        ^[0..0]_size_s &
            &:not(:empty)
                margin: 10px 0
            font-size: $font-size-l


    &_ready
        pointer-events: none

    &_show_none
        pointer-events: none
        display: none

    &_show_error
        overflow: auto
        & ^[0]__waiting
            opacity: 0
            pointer-events: none
            // z-index: -10
        & ^[0]__error
            opacity: 1

    &_show_spin
        & ^[0]__waiting
            opacity: 1
        & ^[0]__error
            opacity: 0
            pointer-events: none
            // z-index: -10

    &__container

        & > ^[0]__info_title
            margin-bottom: 10px
            margin-top: 40px
        & > ^[0]__info_actions
            // margin-top: 10px
        // transition: opacity 2s
        &_hidden
            display: none
            // opacity: 0

